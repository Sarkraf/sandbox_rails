<div class="h-dvh w-dvw bg-gradient-to-r from-gray-100 to-gray-200 p-8">
  <header class="mb-6">
    <h1 class="text-3xl font-bold text-blue-600">Posts</h1>
  </header>
  <main class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @posts.each do |post| %>
      <article class="bg-white p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105 hover:shadow-2xl" id="post_<%= post.id %>">
        <header>
          <h2 class="text-2xl font-semibold mb-2 text-gray-800"><%= post.title %></h2>
        </header>
        <section>
          <p class="text-gray-700 mb-4"><%= truncate(post.content, length: 100) %></p>
        </section>
        <footer>
            <%= link_to 'Read more', post_path(post), class: 'text-blue-500 hover:underline mt-4 block' %>
          <%= link_to 'Delete', post_path(post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'mt-4 bg-red-500 text-white py-2 px-4 rounded hover:bg-red-700' %>
        </footer>
      </article>
    <% end %>
  </main>
</div>
